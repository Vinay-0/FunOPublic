<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" >

	<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:context=".LoginPageWithTabLayout.RegisterFragment"
		android:orientation="vertical"
		android:layout_gravity="center"
		android:background="@color/colorPrimary">

		<TextView
			android:id="@+id/text"
			android:layout_width="match_parent"
			android:layout_height="?android:listPreferredItemHeight"
			android:gravity="center_vertical"
			android:textColor="@color/colorAccent"
			android:textSize="16sp"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/email"
			/>

		<EditText
			android:id="@+id/email"
			android:layout_width="match_parent"
			android:layout_height="?android:listPreferredItemHeight"
			android:layout_marginStart="@dimen/sides_margin"
			android:layout_marginEnd="@dimen/sides_margin"
			android:layout_marginBottom="@dimen/element_margin"
			android:textColor="@color/colorAccent"
			android:textColorHint="@color/colorAccent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/text"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/username"
			android:drawableStart="@drawable/email"
			android:drawablePadding="10dp"
			android:inputType="textEmailAddress"
			android:maxLines="1"
			android:hint="Email"/>

		<EditText
			android:id="@+id/username"
			android:layout_width="match_parent"
			android:layout_height="?android:listPreferredItemHeight"
			android:layout_marginStart="@dimen/sides_margin"
			android:layout_marginEnd="@dimen/sides_margin"
			android:layout_marginBottom="@dimen/element_margin"
			android:textColor="@color/colorAccent"
			android:textColorHint="@color/colorAccent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/email"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/password"
			android:drawableStart="@drawable/account_light"
			android:drawablePadding="10dp"
			android:inputType="text"
			android:maxLines="1"
			android:hint="Username"/>

		<EditText
			android:id="@+id/password"
			android:layout_width="match_parent"
			android:layout_height="?android:listPreferredItemHeight"
			android:layout_marginStart="@dimen/sides_margin"
			android:layout_marginEnd="@dimen/sides_margin"
			android:layout_marginBottom="@dimen/element_margin"
			android:textColor="@color/colorAccent"
			android:textColorHint="@color/colorAccent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/username"
			app:layout_constraintBottom_toTopOf="@+id/confirmPassword"
			android:drawableStart="@drawable/key_light"
			android:drawablePadding="10dp"
			android:inputType="textPassword"
			android:maxLines="1"
			android:hint="Password"/>

		<EditText
			android:id="@+id/confirmPassword"
			android:layout_width="match_parent"
			android:layout_height="?android:listPreferredItemHeight"
			android:layout_marginStart="@dimen/sides_margin"
			android:layout_marginEnd="@dimen/sides_margin"
			android:layout_marginBottom="@dimen/element_margin"
			android:textColor="@color/colorAccent"
			android:textColorHint="@color/colorAccent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/password"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/register"
			android:drawableStart="@drawable/key_light"
			android:drawablePadding="10dp"
			android:inputType="textPassword"
			android:maxLines="1"
			android:hint="Confirm Password"/>

		<Button
			android:id="@+id/register"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/sides_margin"
			android:layout_marginEnd="@dimen/sides_margin"
			android:background="@drawable/opaque_button"
			android:text="Register"
			android:textColor="@color/colorAccent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/password"/>

	</android.support.constraint.ConstraintLayout>
</ScrollView>